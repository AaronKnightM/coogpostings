    <main role="main">

      <section class="jumbotron">
        <div class="container">
           <h1 class="display-3">Featured Events!</h1>
          <p>This is a template for a simple marketing or informational website. It includes a large callout called a jumbotron and three supporting pieces of content. Use it as a starting point to create something more unique.</p>
          <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more &raquo;</a></p>


        </div>
      </section>

      <div class="album py-5 bg-light">
       <div class="container-fluid"> <!-- start container event -->
       
           
              
               
            
            
            <h1 align="left">Events</h1>
            <div class="row">
                
                <% @events.each do |event| %>
                    <div class="col-md-4"><!-- start of event item -->            
                      <div class="card mb-4 shadow-sm" style="background: url(<%= event.imgurl %>); background-size: cover;">
                          <div class="card-jumbo"></div>
                          <div class="centered"><%= event.name %></div>                              
                        <div class="card-body">
                            <p class="card-text">Tags: <%= event.tags %></p>                   
                            <p class="card-text"><%= event.title %></p>               
                          <p class="card-text"><%= event.description %></p>
                          <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                              <button type="button" class="btn btn-sm btn-outline-secondary">Upvote <%= event.upvotes %></button>
                            &nbsp;
                              <button type="button" class="btn btn-sm btn-outline-secondary">Downvote <%= event.downvotes %></button>
                            </div>
                            <small class="card-text"><%= event.timestamp %></small>
                          </div>
                        </div>
                      </div>
                    </div><!-- end of event item -->
                 <% end %>
                
                
            
        </div><!-- end container event -->
      </div>

    </main>
    
    <script>
        jQuery(document).ready(function() {
              // https://api.jquery.com/toggleClass/
                jQuery('.card').hover(function(){
                  jQuery(this).toggleClass('expanded');
                }); 
        });
    </script>
             
              
              