<body>

<main role="main">

<br>
<br>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1 class="display-2" align="center"><%= @cat %> Events</h1>
    </div>
    <% if @events.empty? %>
      <p class="display-4 mx-auto">No events to show!</p>
    <% else %>
    <% @events.each do |event| %>

                        
<div class="col-sm-3">
 <!-- Card -->
<div class="card">

  <!-- Card image -->
   <% @reroute = "/events/" + event.id.to_s %>
    <a href="<%= @reroute %>">
  <div class="view overlay">
    <img class="card-img-top" src="<%= event.imgurl %>" style="max-height:300px; min-height:300px;">
    <a>
      <div class="mask rgba-white-slight"></div>
    </a>
  </div></a>

  <!-- Button -->
  <a class="btn-floating btn-action ml-auto mr-4 mdb-color lighten-3"><i class="fa fa-chevron-right pl-1"></i></a>

  <!-- Card content -->
  <div class="card-body">

    <!-- Title -->
    <h4 class="card-title"><%= event.name %></h4>
    <hr>
    <!-- Text -->
    <p class="card-text text-muted"> Location: <%= event.location %></p>
    <p class="card-text">Description</p>

  </div>

  <!-- Card footer -->
  <div class="rounded-bottom mdb-color lighten-3 text-center pt-3" style="background-color:#e2ecff;">
    <ul class="list-unstyled list-inline font-small">
      <li class="list-inline-item pr-2 white-text"><i class="fa fa-clock-o pr-1"></i><%= event.date %> , <%= event.time %></li>
      <li class="list-inline-item"><a href="#" class="white-text"><i class="fa fa-twitter pr-1"> </i>Upvotes</a></li>
    </ul>
  </div>

</div>
<!-- Card -->
    </div>

      <% end %>
      <% end %>
  </div>
</div>
  



    </main>


    </main>

