<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Events</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Time</th>
      <th>Title</th>
      <th>Description</th>
      <th>Details</th>
      <th>Location</th>
      <th>Imgurl</th>
      <th>Tags</th>
      <th>Org</th>
      <th>Upvotes</th>
      <th>Downvotes</th>
      <th>Extlink</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.time %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.details %></td>
        <td><%= event.location %></td>
        <td><%= event.imgurl %></td>
        <td><%= event.tags %></td>
        <td><%= event.org %></td>
        <td><%= event.upvotes %></td>
        <td><%= event.downvotes %></td>
        <td><%= event.extlink %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
    </div>
  </div>
</div>

